<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" minWidth="-Infinity" prefWidth="600.0" stylesheets="@../../../../css/application.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefWidth="200.0">
         <children>
            <Label fx:id="deviceName" prefWidth="100.0" text="%device.tableview.tablecolumn.devicename.label" />
            <TextField fx:id="deviceNameText" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefWidth="200.0">
         <children>
            <Label fx:id="host" prefWidth="100.0" text="%device.tableview.tablecolumn.host.label" />
            <TextField fx:id="hostText" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefWidth="200.0">
         <children>
            <Label fx:id="port" prefWidth="100.0" text="%device.tableview.tablecolumn.port.label" />
            <Spinner fx:id="mySpinner" editable="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefWidth="200.0" spacing="15.0" style="-fx-background-color: #ff444444;">
         <children>
            <Button fx:id="save" mnemonicParsing="false" text="%patient.button.save.label" />
            <Button fx:id="cancel" mnemonicParsing="false" text="%patient.button.cancel.label" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
