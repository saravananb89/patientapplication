<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" minWidth="-Infinity" prefWidth="600.0" stylesheets="@../../../../css/application.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefWidth="200.0">
         <children>
            <Label fx:id="firstName" prefWidth="100.0" text="%patient.label.firstname.label" />
            <TextField fx:id="firstNameText" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefWidth="200.0">
         <children>
            <Label fx:id="lastName" prefWidth="100.0" text="%patient.label.lastname.label" />
            <TextField fx:id="lastNameText" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefWidth="200.0">
         <children>
            <Label fx:id="age" prefWidth="100.0" text="%patient.label.age.label" />
            <TextField fx:id="ageText" editable="false" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefWidth="200.0">
         <children>
            <Label fx:id="dob" prefWidth="100.0" text="%patient.label.dob.label" />
            <DatePicker id="dobText" fx:id="dobText" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefWidth="200.0">
         <children>
            <Label fx:id="email" prefWidth="100.0" text="%patient.label.email.label" />
            <TextField fx:id="emailText" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefWidth="200.0" spacing="15.0" style="-fx-background-color: #ff444444;">
         <children>
            <Button fx:id="save" mnemonicParsing="false" text="%patient.button.save.label" />
            <Button fx:id="cancel" mnemonicParsing="false" text="%patient.button.cancel.label" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
