<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TreeTableView fx:id="treeTableView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
        <columns>
          <TreeTableColumn fx:id="firstName" prefWidth="75.0" text="%patient.tableview.tablecolumn.firstname.label" />
          <TreeTableColumn fx:id="lastName" prefWidth="75.0" text="%patient.tableview.tablecolumn.lastname.label" />
            <TreeTableColumn fx:id="age" prefWidth="75.0" text="%patient.tableview.tablecolumn.age.label" />
            <TreeTableColumn fx:id="dob" prefWidth="75.0" text="%patient.tableview.tablecolumn.dob.label" />
            <TreeTableColumn fx:id="visitDate" prefWidth="75.0" text="%visit.tableview.tablecolumn.visitdate.label" />
        </columns>
      </TreeTableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="close" mnemonicParsing="false" text="%patient.close.button.label" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
